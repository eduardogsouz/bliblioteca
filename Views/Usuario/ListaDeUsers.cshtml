@model List<Usuario>

<h1>Usuário Cadastrados no Sistema</h1>

<p class="text-danger">@ViewData["Mensagem"]</p>

<table class="table">
    <thead>
        <tr class="col-md-12">
            <th scope="row">Nome</th>
            <th scope="row">Login</th>
            <th scope="row">Tipo</th>
        </tr>
    </thead>

    <tbody>
        @foreach (Usuario u in Model)
        {
            <tr>
                <td>@u.Nome</td>
                <td>@u.Login</td>
                @if(u.Tipo==Usuario.ADMIN)
                {
                    <td>Administrador</td>
                }
                else
                {
                    <td>Padrão</td>
                }

                <td><a href="editarUser?id=@u.Id">Editar</a></td>
                <td><a href="ExcluirUser?id=@u.Id">Excluir</a></td>
            </tr>
        }
    </tbody>
</table>


<a href="RegistrarUser">Registar Novo Usuário</a>